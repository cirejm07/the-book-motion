      <script>
        const form = document.querySelector('form');
        const isFormError = document.querySelector('.formError')
        form.addEventListener('submit', async (e) => {
          e.preventDefault();

          // reset errors
          isFormError.textContent = '';
          
          // get the values
          const name = form.name.value
          const email = form.email.value
          const password = form.password.value
          const repeat_password = form.repeat_password.value
          
          try {
            const res = await fetch('/signup', {
              method: 'POST',
              body: JSON.stringify({name, email, password, repeat_password}),
              headers: {'Content-Type': 'application/json'}
            });
            const data = await res.json()
            console.log(data)
            if(data){
              isFormError.textContent = data
            }
            if(data.savedUser){
              location.assign('/')
            }
          }
          catch(err){
            console.log(err);
          }

        })
      </script>

