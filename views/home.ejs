    <body>
        <%- include('partials/navbar.ejs') %> 
        <%- include('partials/userHead.ejs') %> 

        <!-- HOME section starts -->
<section class="home" id="home">
    <div class="content"><br><br>
        <h2>Meet your next Favorite Novel Book</h2>
        <br>
        <p> 100% Free Books Available </p>
        <br><br><br>
            <a href="/allBooks" class="btn text-success" id="ordernow"> Read Now</a>
    </div>
</section>

    <!-- HOME section ends -->
    <!-- <img src="img/library-shelves-banner-photo.jpg" class="img-fluid h-25 w-100" alt="..." style="position:relative "> -->

    <div class="container-fluid my-5">
      <h1 class="text-center fw-bold display-3 mb-5">Featured <span class="text-success">Categories</span></h1>
<div class="row">
          <div class="col-12 m-auto">
              <div class="owl-carousel owl-theme">
                <%  if(categories.length > 0) { %> <% categories.forEach(category => { %>
                  <div class="item mb-4">
                    <a href="/categories/<%= category.name %>">
                      <div class="card border-0 shadow">
                       
                        <img src="uploads/<%= category.image %>" alt="" class="card-img-top">
                          <div class="card-body">
                              <div class="card-title text-center">
                                  <h4><%= category.name %> </h4>
                              </div>
                              
                          </div>
                      </div>
                    </a>
                  </div>
                  <% }) %> <%}else { %>
                    <h1>Cant fetch data</h1>
                    <% } %>
              </div>
          </div>
      </div>
     
      <h1 class="text-center fw-bold display-3 mb-5 mt-5">New Releases <span class="text-success">Books</span></h1>
      <div class="row">
      
                <div class="col-12 m-auto">
                    <div class="owl-carousel owl-theme">
                      <%  if(books.length > 0) { %> <% books.forEach(book => { %>
                        <a href="/books/<%= book._id %>">
                        <div class="item mb-4">
                            <div id="cards" class="card border-0 shadow ">
                             
                                <img src="uploads/<%= book.image %>" alt="" class="card-img-top">                                <div class="card-body">
                                    <div class="card-title text-center">
                                        <h4><%= book.title %> </h4>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                    </a>
                        <% }) %> <%}else { %>
                          <h1>Cant fetch data</h1>
                          <% } %>
                    </div>
                </div>
                <a href="/allBooks" class="btn btn-success mx-auto my-2 mt-5 mb-5 strong" id="viewAllBooks"> ðŸ“š View All Books</a>
            </div>
       
  </div>


